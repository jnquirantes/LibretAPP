<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="fab"
    tools:context=".tema6.ui.home.HomeFragment">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="344dp"
        android:text="Ingredientes"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:background="#E89946"
        android:clickable="true"
        android:contentDescription="fab"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#E6B37D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Escribe aquí"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView23"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="Título"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="148dp"
        android:text="Preparación"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPreparacion"
        android:layout_width="337dp"
        android:layout_height="127dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Modo de preparación"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <EditText
        android:id="@+id/etIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:ems="10"
        android:hint="Escriba un ingrediente"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <Button
        android:id="@+id/bAñadir"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        android:contentDescription="añadir"
        app:icon="@android:drawable/ic_menu_send"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:iconTint="#E67511"
        app:layout_constraintStart_toEndOf="@+id/etIngredientes"
        app:layout_constraintTop_toBottomOf="@+id/etPreparacion" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="278dp"
        android:layout_height="269dp"
        android:layout_marginStart="36dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etIngredientes" />

</androidx.constraintlayout.widget.ConstraintLayout>